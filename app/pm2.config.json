{
  "apps": [
    {
      "name": "node-server",
      "script": "./src/index.ts",
      "instances": 1,
      "watch": false,
      "exec_mode": "cluster",

      "log_date_format": "YYYY-MM-DD HH:mm Z",
      "out_file": "./logs/pm2-server-out.log",
      "error_file": "./logs/pm2-server-err.log"
    },
    {
      "name": "ranking-scheduler-job",
      "script": "./src/scripts/RankSchedulerScript.ts",
      "instances": 1,
      "exec_mode": "fork",

      "log_date_format": "YYYY-MM-DD HH:mm Z",
      "error_file": "./logs/pm2-ranking-err.log"
    }
  ]
}
