{
  "name": "prography-6th-team4",
  "version": "1.0.0",
  "description": "프로그라피 6기 - 'USO'앱을 개발하는 4팀의 TypeScript와 Express를 이용한 Node.js 백엔드 서버",
  "main": "index.js",
  "scripts": {
    "start": "tsc && pm2 start dist",
    "test": "cross-env NODE_ENV=test jest ./tests/features/index.spec.ts --forceExit",
    "dev": "nodemon",
    "prisma:echo": "echo Using Prisma Environment File : .env.$ENV ':)'",
    "prisma:generate": "npm run prisma:echo && dotenv -e .env.$ENV -- prisma generate",
    "prisma:save": "npm run prisma:echo && dotenv -e .env.$ENV -- prisma migrate save --experimental",
    "prisma:up": "npm run prisma:echo && dotenv -e .env.$ENV -- prisma migrate up --experimental",
    "prisma:down": "npm run prisma:echo && dotenv -e .env.$ENV -- prisma migrate down --experimental"
  },
  "author": "",
  "license": "ISC",
  "nodemonConfig": {
    "watch": [
      "src/*"
    ],
    "ext": "ts",
    "ignore": [
      "**/*.spec.ts"
    ],
    "exec": "cross-env NODE_ENV=local ts-node src/index.ts"
  },
  "dependencies": {
    "@prisma/client": "2.0.0-beta.7",
    "@sentry/node": "^5.19.0",
    "apple-auth": "^1.0.6",
    "aws-sdk": "^2.806.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.1",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "dotenv-cli": "^3.1.0",
    "express": "^4.17.1",
    "firebase-admin": "^8.12.1",
    "googleapis": "^51.0.0",
    "greenlock-express": "^4.0.3",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.19",
    "moment-timezone": "^0.5.35",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "node-schedule": "^1.3.2",
    "pm2": "^4.4.0",
    "redis": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.8.1",
    "uuid": "^8.0.0",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.0"
  },
  "devDependencies": {
    "@prisma/cli": "2.0.0-beta.7",
    "@types/express": "^4.17.6",
    "@types/jest": "^24.9.1",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash": "^4.14.157",
    "@types/moment-timezone": "^0.5.13",
    "@types/morgan": "^1.9.0",
    "@types/multer": "^1.4.5",
    "@types/node": "^14.0.13",
    "@types/node-schedule": "^1.3.0",
    "@types/redis": "^2.8.23",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^7.0.3",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "eslint": "^6.8.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "jest": "^24.9.0",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2",
    "ts-jest": "^24.3.0",
    "ts-node": "^8.9.1",
    "typescript": "^3.8.3"
  }
}
